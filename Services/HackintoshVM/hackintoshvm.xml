<!-- Domain kvm is necessary for a KVM VM -->
<domain type='kvm' xmlns:qemu='http://libvirt.org/schemas/domain/qemu/1.0'>

  <!-- VM Name -->
  <name>hackintoshvm</name>

  <!-- VM Machine type & UEFI settings -->
  <os>
    <type arch="x86_64" machine="q35">hvm</type>
    <loader readonly="yes" type="pflash">/home/fileserver/Applications/HackintoshVM/OVMF_CODE.fd</loader>
    <nvram>/home/fileserver/Applications/HackintoshVM/OVMF_VARS-1024x768.fd</nvram>
    <boot dev='hd'/>
  </os>
  
  <!-- RAM Memory -->
  <memory unit="KiB">16777216</memory>
  <memoryBacking>
    <hugepages/>
  </memoryBacking>

  <!-- CPU settings & pinning (topoext is necessary to correctly identify Ryzen SMT) -->
  <!-- Pinning emulator thread to cores that remain on the host  -->
  <cpu>
    <topology sockets="1" cores="4" threads="1"/>
  </cpu>
  <vcpu placement="static">4</vcpu>
  <cputune>
    <vcpupin vcpu='0' cpuset='3'/>
    <vcpupin vcpu='1' cpuset='9'/>
    <vcpupin vcpu='2' cpuset='4'/>
    <vcpupin vcpu='3' cpuset='10'/>
    <emulatorpin cpuset='0,6'/>
  </cputune>
  
  <features>
    <acpi/>
    <pae/>
  </features>
  
  <!-- Clock settings -->
  <clock offset='utc'/>

  <!-- Initializing devices -->
  <devices>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>

    <!-- Initializing USB & Sata Controllers -->
    <controller type='usb' index='0' model='piix3-uhci'>
      <address type='pci' domain='0x0000' bus='0x02' slot='0x01' function='0x0'/>
    </controller>
    <controller type='sata' index='0'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x1f' function='0x2'/>
    </controller>

    <!-- Initializing Network -->
    <interface type="bridge">
      <mac address="52:54:00:00:00:01"/>
      <source bridge="br0"/>
      <model type="e1000-82545em"/>
      <address type="pci" domain="0x0000" bus="0x02" slot="0x02" function="0x0"/>
    </interface>

    <!-- Hard Drive (as a file) -->
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='/home/fileserver/Applications/HackintoshVM/ESP.qcow2'/>
      <target dev='sda' bus='sata'/>
      <address type='drive' controller='0' bus='0' target='0' unit='0'/>
    </disk>
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='/home/fileserver/Applications/HackintoshVM/HackintoshVM.qcow2'/>
      <target dev='sdb' bus='sata'/>
      <address type='drive' controller='0' bus='0' target='0' unit='1'/>
    </disk>
    <disk type='file' device='disk'>
      <driver name='qemu' type='raw'/>
      <source file='/home/fileserver/Applications/HackintoshVM/BaseSystem.img'/>
      <target dev='sdc' bus='sata'/>
      <address type='drive' controller='0' bus='0' target='0' unit='2'/>
    </disk>

    <!-- Turning off memory ballooning & usb controller (are normally automatically added by libvirt) -->
    <memballoon model="none"/>

    <!-- Input & Video (temporary for install) -->
    <input type='keyboard' bus='usb'>
      <address type='usb' bus='0' port='1'/>
    </input>
    <input type='mouse' bus='usb'>
      <address type='usb' bus='0' port='2'/>
    </input>
    <graphics type='spice' autoport='yes'>
      <listen type='address'/>
      <image compression='off'/>
      <gl enable='no' rendernode='/dev/dri/by-path/pci-0000:05:00.0-render'/>
    </graphics>
    <sound model='ich9'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x1b' function='0x0'/>
    </sound>
    <video>
      <model type='qxl' ram='65536' vram='65536' vgamem='16384' heads='1' primary='yes'/>
    </video>

    <!-- Adding in required devices (Q35 needs sata controller, qemu needs ps/2 input) 
    <controller type="sata" index="0">
      <address type="pci" domain="0x0000" bus="0x00" slot="0x1f" function="0x2"/>
    </controller>
    <input type="mouse" bus="ps2"/>
    <input type="keyboard" bus="ps2"/> -->

  </devices>

  <!-- Specific qemu command line options that are needed for hackintosh -->
  <qemu:commandline>
    <qemu:arg value='-cpu'/>
    <qemu:arg value='Penryn,kvm=on,vendor=GenuineIntel,+invtsc,vmware-cpuid-freq=on,+pcid,+ssse3,+sse4.2,+popcnt,+avx,+aes,+xsave,+xsaveopt,check'/>
    <qemu:arg value='-device'/>
    <qemu:arg value='isa-applesmc,osk=ourhardworkbythesewordsguardedpleasedontsteal(c)AppleComputerInc'/>
    <qemu:arg value='-smbios'/>
    <qemu:arg value='type=2'/>
  </qemu:commandline>

  <!-- libvirt settings -->
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>destroy</on_crash>
  
  <pm>
    <suspend-to-mem enabled="no"/>
    <suspend-to-disk enabled="no"/>
  </pm>

</domain>